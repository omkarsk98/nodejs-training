<html>
    <head>
        <title>
            <%= details.name%>
        </title>
    </head>
    <body style="padding-right: 10%;">
        <div>
          <div margin = 0.5em;>
            <h3><%= details.name%></h3>
            <p><b>Category</b> : <%= details.category%></p>
            <p><b>Label</b> : <%= details.label%></p>
            <p><b>Price</b> : $<%= details.price%></p>
            <p><b>Description</b> : <%= details.description%></p>
          </div>
          <div>
            <h4>Comments</h4>
            <div style="margin-left:0%" >
              <% for (comment of details.comments) { %>
                <div style="margin-left:2%; width:50%">
                  <p><%=comment.comment%></p>
                  <p style="text-align:right; margin-right: 20%;">-<%=comment.author%></p>
                  <p style="text-align:right; margin-right: 20%;">(<%=moment(comment.date).format('Do MMMM, YYYY');%>)</p>
                  <form action="/dish/delete-comment/<%= comment.id%>/<%= comment.dishId%>" method="post">
                    <button>Delete</button>
                  </form>
                  <hr>
                </div>
              <%}%>
            </div>
            <a href = "/dish/<%=details.id%>/add-comment"><button>Add Comment</button></a>
          </div>
        </div>
        <%- include("footer") %>
      </body>
</html>