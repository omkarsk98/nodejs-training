        <input type="text" required name="name" /><br /><br />
        <label>Category</label><br />
        <input type="text" required name="category" /><br /><br />
        <label>Price</label><br />
        <input type="text" required name="price" /><br /><br />
        <label>Label</label><br />
        <input type="text" required name="label" /><br /><br />
        <label>Description</label><br />
        <textarea type="text" required name="description"></textarea><br /><br />
        <button>Add</button>
      </form>
    </div>
  </body>
</html>
